{
  "manifest_version": 2,

  "name": "Google Properties Menu",
  "description": "This extension shows the Google Properties Menu.",
  "version": "1.0",

  "background": {
    "page": "pages/google_properties.html"
  },

  "content_scripts": [{
    "matches": ["*://*.google.com/maps/*"],
    "js": [
      "libs/eventemitter2.min.js",
      "libs/roslib.min.js",
      "contentjs/google_properties_menu.js"
      ],
    "css": ["css/style.css"],
    "all_frames": true
  }],

  "web_accessible_resources": [
    "images/*.png",
    "images/*.jpg",
    "pages/*.html",
    "*.js"
  ],
  "permissions": [
    "<all_urls>",
    "tabs",
    "webRequest",
    "webNavigation",
    "management"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'",

  "update_url": "http://lg-head/extensions/onboard-upd.xml"
}
