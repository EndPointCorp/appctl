{
  "manifest_version": 2,

  "name": "Statistics Sink",
  "description": "Route statistics from pages and extensions to statsd.",
  "version": "1.0",

  "app": {
    "background": {
      "scripts": ["statistics_sink.js"]
    }
  },

  "permissions": [
    "storage"
  ],

  "sockets": {
    "udp": {
      "bind": "*",
      "send": "*"
    }
  },

  "update_url": "http://lg-head/extensions/statistics_sink-upd.xml"
}
