{
  "manifest_version": 2,

  "name": "Onboard",
  "description": "This extension shows the onboard keyboard when textboxes and textareas gain or lose focus.",
  "version": "1.1",

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": [
      "apply.js"
      ],
    "all_frames": true,
    "run_at": "document_end"
  }],

  "permissions": [
  ],

  "browser_action": {
      "default_icon": "onboard.png",
      "default_popup": "popup.html"
  },

  "update_url": "http://lg-head/extensions/onboard-upd.xml"
}
