{
  "manifest_version": 2,

  "name": "Render Statistics",
  "description": "Add rendering statistics to the active tab.",
  "version": "1.0",

  "background": {
    "scripts": [
      "eventemitter2.min.js",
      "roslib.min.js",
      "render_statistics.js"
    ]
  },

  "permissions": [
    "http://*/",
    "https://*/",
    "tabs",
    "activeTab",
    "storage"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "update_url": "http://lg-head/extensions/render_statistics-upd.xml"
}
