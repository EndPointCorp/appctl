{
  "manifest_version": 2,
  "name": "pacman",
  "version": "1.0",
  "description": "Addon for translating the spacenavigator code into keyboard arrow events.",
  "background": {
    "page": "background/background.html",
    "content_security_policy": "script-src 'self' https://www.google.com/*; object-src 'self' https://www.google.com/*"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "webRequest",
    "webNavigation",
    "management"
  ],
  "web_accessible_resources": [
    "models/*.json", "sounds/*.wav", "contentjs/inject.js",
    "contentjs/pacman.js", "css/*.css",
    "libs/eventemitter2.min.js",
    "libs/roslib.min.js"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/logos/*"
      ],
      "all_frames": false,
      "js": [
        "libs/eventemitter2.min.js",
        "libs/roslib.min.js",
        "libs/rosLogging.js",
        "contentjs/pacman_injector.js"
      ]
    }
  ]
}
